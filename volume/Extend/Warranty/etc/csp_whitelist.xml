<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">

    <policies>
        <policy id="img-src">
            <values>
                <value
                    id="helloextend-static-assets_s3_amazonaws_com"
                    type="host">https://helloextend-static-assets.s3.amazonaws.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="fonts_googleapis_com" type="host">https://fonts.googleapis.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="fonts_gstatic_com" type="host">https://fonts.gstatic.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="*_helloextend_com" type="host">https://*.helloextend.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="*_helloextend_com" type="host">https://*.helloextend.com</value>
            </values>
        </policy>
    </policies>

</csp_whitelist>
