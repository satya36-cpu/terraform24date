<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">

    <extension_attributes for="Magento\Sales\Api\Data\OrderItemInterface">
        <attribute code="contract_id" type="string" />
        <attribute code="product_options" type="string" />
        <attribute code="warranty_id" type="string" />
        <attribute code="associated_product" type="string" />
        <attribute code="term" type="string" />
        <attribute code="refund" type="boolean" />
        <attribute code="lead_token" type="string" />
        <attribute code="plan_type" type="string" />
    </extension_attributes>
    <extension_attributes for="Magento\Quote\Api\Data\CartItemInterface">
        <attribute code="lead_token" type="string" />
    </extension_attributes>
</config>
